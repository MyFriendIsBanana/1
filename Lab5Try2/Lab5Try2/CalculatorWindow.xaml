<Window x:Class="Lab5Try2.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="400" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Історія -->
        <TextBox x:Name="txtHistory" IsReadOnly="True" Height="30" FontSize="14" TextAlignment="Right"/>

        <!-- Поточне число -->
        <TextBox x:Name="txtCurrent" IsReadOnly="True" Height="50" FontSize="20" TextAlignment="Right" Grid.Row="1"/>

        <!-- Кнопки -->
        <WrapPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="C" Click="BtnClearAll_Click" Width="60" Height="40" Margin="2"/>
            <Button Content="CE" Click="BtnClearEntry_Click" Width="60" Height="40" Margin="2"/>
            <Button Content="<" Click="BtnBackspace_Click" Width="60" Height="40" Margin="2"/>
            <Button Content="/" Click="BtnOperator_Click" Width="60" Height="40" Margin="2" Tag="/"/>

            <Button Content="7" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="7"/>
            <Button Content="8" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="8"/>
            <Button Content="9" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="9"/>
            <Button Content="*" Click="BtnOperator_Click" Width="60" Height="40" Margin="2" Tag="*"/>

            <Button Content="4" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="4"/>
            <Button Content="5" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="5"/>
            <Button Content="6" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="6"/>
            <Button Content="-" Click="BtnOperator_Click" Width="60" Height="40" Margin="2" Tag="-"/>

            <Button Content="1" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="1"/>
            <Button Content="2" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="2"/>
            <Button Content="3" Click="BtnDigit_Click" Width="60" Height="40" Margin="2" Tag="3"/>
            <Button Content="+" Click="BtnOperator_Click" Width="60" Height="40" Margin="2" Tag="+"/>

            <Button Content="0" Click="BtnDigit_Click" Width="124" Height="40" Margin="2" Tag="0"/>
            <Button Content="." Click="BtnDecimal_Click" Width="60" Height="40" Margin="2"/>
            <Button Content="=" Click="BtnEquals_Click" Width="60" Height="40" Margin="2"/>
        </WrapPanel>
    </Grid>
</Window>